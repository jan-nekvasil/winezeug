{
    if ! test -f "$W_CACHE/$W_PACKAGE/OfficialCncTiberianSun.rar"
    then
        w_download $W_PACKAGE http://na.llnet.cnc3tv.ea.com/u/f/eagames/cnc3/cnc3tv/Classic/OfficialCnCTiberianSun.rar 591aabd639fb9f2d2476a2150f3c00b1162674f5
    fi

    cd "$W_CACHE/$W_PACKAGE"

    try_unrar x OfficialCnCTiberianSun.rar "$W_PROGRAMS_X86_UNIX"

    w_declare_exe "$W_PROGRAMS_X86_WIN\\EA Games\\Command & Conquer The First Decade\\Command & Conquer(tm) Tiberian Sun(tm)\\SUN" "Game.exe"
