    file2="f131e45dba66ed2c98dd7a1e04cc1114b7c5e4b6.iso" 

load_fallout3_goty()
{
# http://appdb.winehq.org/objectManager.php?sClass=version&iId=14322
    iso_mount "$W_CACHE"/$W_PACKAGE/379e2daa9bdd1aaf1cb152c1d9f8181f8f24e01b.iso

    w_ahk_do "
        Run, ${W_ISO_MOUNT_LETTER}:Setup.exe
        SetTitleMatchMode, 2
