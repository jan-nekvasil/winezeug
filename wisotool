#----------------------------------------------------------------

w_metadata pscs5 apps \
    title="Photoshop CS5 Demo" \
    publisher="Adobe" \
    year="2010" \
    media="download" \
    file1="Photoshop_12_LS1.7z" \
    file2="Photoshop_12_LS1.exe" 

load_pscs5()
{
    w_try cd "$W_CACHE/$W_PACKAGE"
    if [ ! -f "$W_CACHE/$W_PACKAGE/Photoshop_12_LS1.7z" ]
    then
        w_die "You must download Photoshop CS5 trial files and put them in $W_CACHE/$W_PACKAGE"
    else
        verify_sha1sum 0d8fac96f32963194add553b8ca072c40ca4b912 Photoshop_12_LS1.7z
    fi
    if [ ! -f "$W_CACHE/$W_PACKAGE/Photoshop_12_LS1.exe" ]
    then
        w_die "You must download Photoshop CS5 trial files and put them in $W_CACHE/$W_PACKAGE"
    else
        verify_sha1sum abbfeeef9348c79b6cdde5f8762f5c3f96d32f6e Photoshop_12_LS1.exe
    fi

    w_try Photoshop_12_LS1.exe /s /x /d .
    w_try cd "Adobe CS5"

    if w_workaround_wine_bug 22679
    then
        w_try_winetricks msxml3
    fi

    w_warn "Try not to have anything else running, cs5 will complain if firefox is running, and the mouse clicks here are sensitive"

    # Doesn't have clickable buttons, resorting to window positions. May break on non standard dpi settings.
    # Not sure how to detect when the window changes. They all have the same title, and no text is visible to AHK.
    # As a dirty workaround, may try detecting the color on the left side which shows the menu. The current step is darker
    # than the rest.
    w_ahk_do "
        SetTitleMatchMode, 2
        run Set-up.exe
        winwait, Adobe Photoshop CS5
        sleep 2000
        ControlClick, X750 Y550, Adobe Photoshop CS5
        sleep 2000
        winwait, Adobe Photoshop CS5
        sleep 2000
        ControlClick, X300 Y350, Adobe Photoshop CS5
        sleep 2000
        ControlClick, X700 Y340, Adobe Photoshop CS5
        Send, {Down}{Down}{Enter} ; Choose US English
        sleep 2000
        ControlClick, X750 Y550, Adobe Photoshop CS5
        sleep 2000
        winwait, Adobe Photoshop CS5
        sleep 2000
        ControlClick, X750 Y550, Adobe Photoshop CS5
        ; Installs in about 5 minutes here, but that's not a reliable number.
        ; The final window is indistinguishable from the previous, except that it has a button that the former does not.
        ; Exploit that to close the installer gracefully.
        Loop
            {
                ; Loop every 30 seconds while the installer window is present, and try to click the 'Done' button.
                ; If the window doesn't exist, installer is finally done.
                IfWinExist, Adobe Photoshop CS5
                {
                    ControlClick, X750 Y550, Adobe Photoshop CS5
                    Sleep 30000
                }
                else break
            }
    "
    w_try cd ..
    # Remove installer temp files:
    w_try cd "$W_CACHE/$W_PACKAGE"
    w_try rm -rf "Photoshop CS5 Read Me.pdf" "Adobe CS5"
}

# Special case!  Probably shouldn't be here.
w_metadata pscs5_pickle apps \
    title="Photoshop CS5 Demo" \
    publisher="Adobe" \
    year="2010"

load_pscs5_pickle()
{
    w_warn "This will tar up Photoshop CS5's files from a Windows install, along with needed registry entries, for use in wine with load_pscs5_unpickle()"

    if [ ! -d "$W_PROGRAMS_X86_WIN/Adobe/Adobe Photoshop CS5/" ]
    then
        load_pscs5
    fi

    w_try cd "$W_TMP"

    # Setup a skeleton file structure:
    w_try rm -rf cs5_temp
    w_try mkdir -p cs5_temp/"Common Files"
    w_try mkdir -p cs5_temp/"Program Files"
    w_try mkdir -p cs5_temp/"userhome"

    w_try cd cs5_temp

    w_try sleep 1 # Potential race condition, caught me a couple times

    # First, the registry entries:
    w_try reg.exe export HKLM\\Software\\Adobe adobe_cs5.reg

    # Then the files:
    userprofile_unix="`cygpath $USERPROFILE`"
    system32_unix="`cygpath $W_WINDIR_UNIX/system32`"

    w_try cd "Common Files"
    w_try cp -r "$W_PROGRAMS_X86_UNIX/Common Files/Adobe" .
    w_try cd ../"Program Files"
    w_try cp -r "$W_PROGRAMS_X86_UNIX/Adobe" .
    w_try cd ../userhome
    w_try cp -r "$appdata_unix/Adobe" .
    w_try cd ..
    w_try cp "$system32_unix/odbc32.dll" .
    w_try cp "$system32_unix/odbcint.dll" .

    w_try cd "$W_TMP"/cs5_temp
    w_try tar -c -f "$olddir/adobe_cs5.tar" *
    w_try cd ..
    w_try rm -rf cs5_temp
}

# Special case, part 2
w_metadata pscs5_unpickle apps \
    title="Photoshop CS5 Demo" \
    publisher="Adobe" \
    year="2010" \
    media="dvd" \
    file1="adobe_cs5.tar" 

load_pscs5_unpickle()
{
    w_warn "This will install Photoshop CS5's files from a Windows install made with pscs5_pickle()"

    # Install dependencies:
    w_try_winetricks gdiplus ie6 msxml3 vcrun2005sp1 vcrun2008

    w_try cd "$W_TMP"
    w_try tar xf "$W_CACHE/$W_PACKAGE/adobe_cs5.tar"
    w_try $WINE regedit adobe_cs5.reg
    w_try cd "$W_PROGRAMS_X86_UNIX"
    w_try mv "$W_TMP/Program Files/Adobe" .
    w_try cd "Common Files"
    w_try mv "$W_TMP/Common Files/Adobe" .
    w_try cd "$appdata_win/"
    w_try mv "$W_TMP/userhome"/* .
    w_try cd "$W_WINDIR_UNIX/system32"
    w_try mv "$W_TMP/odbc32.dll" .
    w_try mv "$W_TMP/odbcint.dll" .
    w_try $WINE regsvr32 odbc32.dll
    w_try $WINE regsvr32 odbcint.dll

    w_warn "Do not report bugs to wine with an installation done this way. Wait until the installer bugs are fixed or have patches to workaround them!"
    w_warn "On the first run, it will tell you your trial has 0 days left. On the second run and after, it will say 30 days."
}

