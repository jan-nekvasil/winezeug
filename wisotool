#----------------------------------------------------------------

w_metadata rom games \
    title="Runes of Magic" \
    publisher="Frogster Interactive" \
    year="2009" \
    media="download" \
    file1="Runes_of_Magic_3.0.1.2153.part1.exe" \
    file2="Runes_of_Magic_3.0.1.2153.part2.rar" 

load_rom()
{
    if ! test -f "$W_CACHE/$W_PACKAGE/Runes_of_Magic_3.0.1.2153.part1.exe" || ! test -f "$W_CACHE/$W_PACKAGE/Runes_of_Magic_3.0.1.2153.part2.rar"
    then
        w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/FOG/rom/Runes_of_Magic_3.0.1.2153_two.exe/Runes_of_Magic_3.0.1.2153.part1.exe 3263660262c6411f179e80c5ef0906c783d7bb08
        w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/FOG/rom/Runes_of_Magic_3.0.1.2153_two.exe/Runes_of_Magic_3.0.1.2153.part2.rar 569dee9c375fa50394958daa9f8d8a1b02bb9b11

    fi
    if ! test -f "$W_CACHE/$W_PACKAGE/cached/ROMSetup.exe"
    then
        # Pre-extract files, if unrar is available
        mkdir -p "$W_CACHE/$W_PACKAGE/cached"
        cd "$W_CACHE/$W_PACKAGE/cached"
        try_unrar e ../Runes_of_Magic_3.0.1.2153.part1.exe
    fi
    # manual updates from http://forum.runesofmagic.com/showthread.php?t=79267
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.1.2153.en_3.0.1.2172.en.exe 817391606fd1c05ad6194a06b21f6a5632cacf4f
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.1.2172.en_3.0.1.2175.en.exe ed120bc8140f8c3b2481a78f504a7a9e76c8642f
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.1.2175.en_3.0.1.2178.en.exe 012e679402f2165effbf2aaaffe41a5d9405d319
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.1.2178.en_3.0.1.2181.en.exe c449510566108dfc29882e6229cf716f232102df
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.1.2181.en_3.0.1.2192.en.exe d5afc10ff1126c3dabafa02b4681f411aa689c57
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.1.2192.en_3.0.1.2199.en.exe 542ac3b4d0fc4434aadfb784a46868f1815351da
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.1.2199.en_3.0.2.2189.en.exe c5f6115aeb2e4627dd0428c0024f177dca6f067c
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.2.2189.en_3.0.2.2213.en.exe bf3183406bcb848826301bba33775a6dfb611859
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.2.2213.en_3.0.2.2214.en.exe d576596086395ea83cb8c1422877c81ed45a90c9
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.2.2214.en_3.0.3.2231.en.exe af3f74030f371ef9bc4cfcecf4a9ad1159f28136
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.3.2231.en_3.0.3.2241.en.exe e46dbb3d2699ddc34a7885a16224c79f80657749
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.3.2241.en_3.0.3.2246.en.exe 17c49fb1381fb6927a19ed58ef210abd98c3e89f
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.3.2246.en_3.0.3.2250.en.exe 6484b2d8b23c1c7389f2f9a38681ecda84d856a4
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.3.2250.en_3.0.4.2237.en.exe a34b20828303cdeaa649b503d0eee915b7a808b3
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.4.2237.en_3.0.4.2261.en.exe 511bf0281a7f87e9912fcf52649307eec5b7d315
    w_download $W_PACKAGE http://frogster.vo.llnwd.net/o9/patch/en/patch_3.0.4.2261.en_3.0.4.2263.en.exe 8d01ef99ae2a72e36d9de2b6d021bc3bbd3cd246

    cd "$W_CACHE/$W_PACKAGE"
    patches=`ls patch*.exe`
    w_ahk_do "
        SetTitleMatchMode, 2
        ; Pre-extracting makes it a lot easier to debug this script!
        ifexist, cached\\ROMSetup.exe
            run, cached\\ROMSetup.exe
        else
            run, Runes_of_Magic_3.0.1.2153.part1.exe
        winwait, Runes of Magic, This will install
        sleep 2000
        ControlClick, TNewButton1
        winwait, Runes of Magic, License
        sleep 1000
        ControlClick, TNewRadioButton1      ; Accept
        loop
        {
            ; FIXME find some simpler way of making this reliable on vista
            ifwinexist, Runes of Magic, License
                ControlClick, TNewButton2   ; Next
            sleep 1000
            ifwinexist, Runes of Magic, Destination
                break
        }
        winwait, Runes of Magic, Destination
        ;ControlClick, TNewButton3
        send {Enter}
        winwait, Runes of Magic, shortcuts
        ;ControlClick, TNewButton4
        send {Enter}
        winwait, Runes of Magic, Additional Tasks
        ;ControlClick, TNewButton4
        send {Enter}
        winwait, Runes of Magic, Ready
        ;ControlClick, TNewButton4
        send {Enter}
        winwait, Runes of Magic, finished
        sleep 1000
        ;ControlClick, TNewCheckListBox1
        send {Space}                        ; don't start
        ;ControlClick, TNewButton4
        send {Enter}                        ; finish
        ;winwait, Territory        # not needed anymore?
        ;send {Esc}
        ; Don't let it autoupdate (not needed anymore?)
        winkill
    "
    # Let installer finish normally
    $WINESERVER -w
    # Create settings file so patches can find game.  Normally this is created on first run of game.
    # Use funny tr and | to avoid embedded carriage returns, some editors strip them
    mkdir -p "$W_DRIVE_C/users/$USERNAME/My Documents/Runes of Magic"
    tr '|' '\015' > "$W_DRIVE_C/users/$USERNAME/My Documents/Runes of Magic/GameSettings.ini" <<_EOF_
[Install]|
GamePath=$W_PROGRAMS_X86_WIN\\Runes of Magic\\|
_EOF_

    for patch in $patches
    do
        echo Running $patch
        w_ahk_do "
            run $patch,,, patchpid
            SetTitleMatchMode, 2
            loop
            {
                ; patch might exit before we notice it
                process, exist, %patchpid%
                if ErrorLevel = 0
                    break
                ;ifwinexist, Find game path
                ;{
                ;    send {Enter}
                ;    winwait, Browse for Folder
                ;    ; these coordinates are brittle and only work on empty wine
                ;    MouseMove, 76,145   ; on + next to Program Files
                ;    Click
                ;    MouseMove, 115,207  ; select Runes of Magic
                ;    Click
                ;    send {Enter}
                ;    winwaitclose
                ;}
                ifwinexist, Error
                    winwaitclose
                ; Older updaters use title "RomUpdate"
                ifwinexist, RomUpdate
                {
                    winwaitclose
                    break
                }
                ; Newer updaters use title "Runes of Magic U" (no fooling)
                ifwinexist, Runes of Magic U
                {
                    winwaitclose
                    break
                }
                sleep 1000
            }
        "
    done

    if w_workaround_wine_bug 23217
    then
        w_try_winetricks vcrun2005
    fi

    if w_workaround_wine_bug 22002
    then
        w_try_winetricks ie6
    fi

    w_declare_exe "$W_PROGRAMS_X86_WIN\\Runes of Magic" "Runes of Magic.exe"
}

#----------------------------------------------------------------

w_metadata re5bench benchmarks \
    title="Resident Evil 5 Benchmark" \
    publisher="Capcom" \
    year="2009" \
    media="download" \
    file1="nzd_ResidentEvil5_Benchmark.exe" 

load_re5bench()
{
    if ! test -f "$W_CACHE/$W_PACKAGE/nzd_ResidentEvil5_Benchmark.exe"
    then
        w_download $W_PACKAGE http://download.nvidia.com/downloads/nZone/demos/nzd_ResidentEvil5_Benchmark.exe 041492b9af138f67e7acf97fbd8e926dda59ab12
    fi

    cd "$W_CACHE/$W_PACKAGE"
    w_ahk_do "
        run nzd_ResidentEvil5_Benchmark.exe
        WinWait ahk_class MsiDialogCloseClass
        Sleep 1000
        Send {Enter}
        ; ControlClick Button1 ; Next.  Doesn't work?
        WinWait ahk_class MsiDialogCloseClass, License
        ControlClick Button3 ; Accept
        ControlClick Button5 ; Next
        WinWait ahk_class MsiDialogCloseClass, Destination
        ControlClick Button1 ; Next
        WinWait ahk_class MsiDialogCloseClass, Ready
        ControlClick Button1 ; Install
        Loop
        {
            ; Only shows up on older Wine versions (e.g., 1.2. Disabling gameux.dll does not help
            IfWinExist, GameExplorerInstall
            {
                ControlClick, Button1, GameExplorerInstall
                Winwait, ahk_class MsiDialogCloseClass, Completed
                ControlClick Button3 ; Uncheck Launch
                ControlClick Button1 ; Finish
                break
            }
            IfWinExist, ahk_class MsiDialogCloseClass, Completed
            {
                ControlClick Button3 ; Uncheck Launch
                ControlClick Button1 ; Finish
                break
            }
            sleep 5000
        }
    "

    if w_workaround_wine_bug 21939
    then
        w_try_winetricks wmp9
    fi

    # Should run launcher.exe, but that requires .net and doesn't run on Wine
    # Should give choice of running RE5DX10.EXE, but that requires dx10, which doesn't work on Wine yet
    w_declare_exe "$W_PROGRAMS_X86_WIN\\CAPCOM\\RESIDENT EVIL 5 Benchmark Version" "RE5DX9.EXE"
}

