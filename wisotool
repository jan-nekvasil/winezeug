    title="Deus Ex 2 / Deus Ex: Invisible War Demo" \
    publisher="Eidos" \
    year="2003" \
    media="download" \
    file1="dxiw_demo.zip" 

load_deusex2_demo()
{
    w_download_manual $W_PACKAGE http://www.techpowerup.com/downloads/1730/Deus_Ex:_Invisible_War_Demo.html dxiw_demo.zip ccae48fb046d912b3714ea1b4be4294e74bb3092

    mkdir -p "$W_TMP/$W_PACKAGE"
    cd "$W_CACHE/$W_PACKAGE"
    w_try unzip dxiw_demo.zip -d "$W_TMP/$W_PACKAGE"
    cd "$W_TMP/$W_PACKAGE"
    chmod +x setup.exe
    w_ahk_do "
        SetTitleMatchMode, 2
        run, setup.exe
        winwait, Deus Ex - Invisible War Demo - InstallShield
        winwaitclose
        winwait, Deus Ex - Invisible War Demo
        send {Tab}{Enter}
        winwait, Deus Ex - Invisible War Demo - InstallShield
        send n
        winwait, Deus Ex - Invisible War Demo, license
        send an
        winwait, Deus Ex - Invisible War Demo, setup type
        send n
        winwait, Deus Ex - Invisible War Demo, install
        send i
        winwait, Question, ; Readme?
        send n
        winwait, Question, ; Play now?
        send n
        winwait, Deus Ex - Invisible War Demo, install  ; Done
        send {Enter}
        winwaitclose
    "

    if w_workaround_wine_bug 6971
    then
        w_warn "This game suffers from The Mouse Bug, see http://wiki.winehq.org/Bug6971 for tips"
    fi

    w_declare_exe "$W_PROGRAMS_X86_WIN\\Deus Ex - Invisible War Demo\\System\\" "DX2.exe"
}

#----------------------------------------------------------------

w_metadata diablo2 games \
    title="Diablo II" \
    publisher="Blizzard" \
    year="2000" \
    media="dvd" \
    file1="e20efb1ea60e58b4a25275a00571aabfe3ab4511.iso" \
    file2="51e2c630d5dd017e6168a8cf3ee24e39010316d9.iso" \
    file3="382ea98f270e39855b558b8fac0d609712a54ae8.iso" \
    file4="e20efb1ea60e58b4a25275a00571aabfe3ab4511.iso" 

load_diablo2()
{
    w_warn "You must have already done 'wisotool load=YOURKEY' on the install disc, and 'wisotool load' on the other three discs."
    w_download $W_PACKAGE http://ftp.blizzard.com/pub/diablo2/patches/PC/D2Patch_113c.exe c78761bfb06999a9788f25a23a1ed30260ffb8ab

    # Force clean-ish install
    test -d "$W_PROGRAMS_UNIX/Diablo II" && rm -rf "$W_PROGRAMS_UNIX/Diablo II"

    # Get user's key
    DIABLOIIKEY=`cat "$W_CACHE"/$W_PACKAGE/e20efb1ea60e58b4a25275a00571aabfe3ab4511.txt | tr -d -`

    iso_mount "$W_CACHE"/$W_PACKAGE/e20efb1ea60e58b4a25275a00571aabfe3ab4511.iso
    w_ahk_do "
        run ${W_ISO_MOUNT_LETTER}:setup.exe
        winwait, Diablo II Setup
        send {i}
        winwait, Choose Installation Size
        send {u}
        send {Enter}
        send {Raw}$USERNAME
        send {Tab}{Raw}$DIABLOIIKEY
        send {Enter}
        winwait, Diablo II - choose install directory
        send {Enter}
        winwait, Desktop Shortcut
        send {N}
        winwait, Insert Disc"
    iso_mount "$W_CACHE"/$W_PACKAGE/51e2c630d5dd017e6168a8cf3ee24e39010316d9.iso
    # Needed by patch 1.13c to avoid disc swapping
    cp "$W_ISO_MOUNT_ROOT"/d2music.mpq "$W_PROGRAMS_UNIX/Diablo II/"
    w_ahk_do "
        send, {Enter}
        Sleep 1000
        winwait, Insert Disc"
    iso_mount "$W_CACHE"/$W_PACKAGE/382ea98f270e39855b558b8fac0d609712a54ae8.iso
    w_ahk_do "
        send, {Enter}
        Sleep 1000
        winwait, Insert Disc"
    iso_mount "$W_CACHE"/$W_PACKAGE/e20efb1ea60e58b4a25275a00571aabfe3ab4511.iso
    w_ahk_do "
        send, {Enter}
        Sleep 1000
        winwait, View ReadMe?
        ControlClick &No, View ReadMe?
        winwait, Register Diablo II Electronically?
        send {N}
        winwait, Diablo II Setup - Video Test
        ControlClick &Cancel, Diablo II Setup - Video Test
        winclose, Diablo II Setup"
    iso_umount

    w_try "$WINE" "$W_CACHE"/$W_PACKAGE/D2Patch_113c.exe
    w_ahk_do "
        winwait Blizzard Updater v2.72
        send {Enter}
        winwait Diablo II
        ControlClick &Cancel, Diablo II"
    # Dagnabbit, the darn updater starts the game after it updates, no matter what I do?
    killall "Game.exe"

    w_warn "When starting the game, be patient, wait until the menu appears.  The game seems to hang if it looses focus, see bug 14456, you may need to set winecfg to virtual desktop."

    w_declare_exe "$W_PROGRAMS_X86_WIN\\Diablo II" "Diablo II.exe"
}

