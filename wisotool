w_metadata aoe3_demo games \
    title="Age of Empires III" \
    publisher="Microsoft" \
    year="2005" \
    media="download" \
    file1="aoe3trial.exe" 

load_aoe3_demo()
{

    w_download $W_PACKAGE "http://download.microsoft.com/download/a/5/2/a525997e-8423-435b-b694-08118d235064/aoe3trial.exe" \
        2b0a123243092d79f910db5691d99d469f7c17c3

    if w_workaround_wine_bug 24897
    then
        w_try_winetricks msxml4
    fi

    cd "$W_CACHE/$W_PACKAGE"

    w_ahk_do "
        SetTitleMatchMode, 2
        run aoe3trial.exe
        WinWait,Empires,Welcome
        Sleep 500
        ControlClick Button1 ; Next
        WinWait,Empires,Please
        Sleep 500
        ControlClick Button4 ; Next
        WinWait,Empires,Complete
        Sleep 500
        ControlClick Button4 ; Finish
        WinWaitClose
    "

    if w_workaround_wine_bug 24911
    then
        # On some systems, only quartz is needed?
        # appdb says that l3codecx is also needed?
        w_try_winetricks devenum dmsynth quartz
    fi

    if w_workaround_wine_bug 24912
    then
        # kill off lingering installer
        w_ahk_do "
            SetTitleMatchMode, 2
            WinKill,Empires
        "
        # or should we just do wineserver -k, like fable_tlc does?
        PID=`ps augxw | grep IDriver | grep -v grep | awk '{print $2}'`
        kill $PID
    fi

    w_declare_exe "$W_PROGRAMS_X86_WIN\\Microsoft Games\\Age of Empires III Trial" "age3.exe"
}

#----------------------------------------------------------------

w_metadata aoe3cc games \
    title="Age Of Empires III: Complete Collection - Age of Empires III" \
    publisher="Microsoft" \
    year="2009" \
    media="dvd" \
    file1="AOE III DISC 1.iso" \
    file2="AOE III DISC 2.iso" \
    file3="AOE III DISC 3.iso" 

load_aoe3cc()
{
# Not using $W_PACKAGE because it may be called below from aoe3cc_ad/aoe3cc_wc
# where $W_PACKAGE would be set differently

    mkdir -p "$W_TMP/aoe3cc"

    if test ! -f "$W_TMP/aoe3cc/tempcd/0x0409.ini"
    then
        # This app is protected by SmartE, so we have to copy
        # all the files to hard disk before installing.
        mkdir -p "$W_TMP/aoe3cc/tempcd"
        for disc in 1 2 3
        do
            echo Copying disc $disc
            # Not using $W_PACKAGE because it may be called below from aoe3cc_ad/aoe3cc_wc
            # where $W_PACKAGE would be set differently
            iso_mount "$W_CACHE/aoe3cc/AOE III DISC $disc.iso"
            cp -rf "$W_ISO_MOUNT_ROOT"/* "$W_TMP"/aoe3cc/tempcd
            chmod -R +w "$W_TMP"/aoe3cc/tempcd
            iso_umount
            sleep 5
        done
    fi

    if w_workaround_wine_bug 657
    then
        w_try_winetricks mfc42
    fi

    if w_workaround_wine_bug 24897
    then
        w_try_winetricks msxml4
    fi

    AOE3CC_KEY="`cat "$W_CACHE/aoe3cc/AOE III DISC 1.txt" | tr -d -`"

    cd "$W_TMP"/aoe3cc/tempcd
    w_ahk_do "
        Run, Setup.exe
        SetTitleMatchMode, 2
        WinWait, Age of Empires, Welcome
        Sleep 500
        ControlClick Button1 ; Next
        WinWait, Age of Empires, Express
        Sleep 500
        ControlClick Button4 ; Next
        WinWait, Age of Empires, Key
        Sleep 500
        ControlClick, Edit1
        Send {RAW}$AOE3CC_KEY
        ControlClick, Button1 ; OK
        WinWait, Age of Empires, Complete
        Sleep 500
        ControlClick, Button4 ; Finish
        WinWaitClose
    "

    if w_workaround_wine_bug 24911
    then
        w_try_winetricks devenum dmsynth quartz l3codecx
    fi

    if w_workaround_wine_bug 24912
    then
        # kill off lingering installer
        w_ahk_do "
            SetTitleMatchMode, 2
            WinKill,Empires
        "
    fi

    w_declare_exe "$W_PROGRAMS_X86_WIN\\Microsoft Games\\Age of Empires III" "age3.exe"
}

#----------------------------------------------------------------

w_metadata aoe3cc_ad games \
    title="Age Of Empires III: Complete Collection - Asian Dynasties Expansion" \
    publisher="Microsoft" \
    year="2009" \
    media="dvd" \
    file1="AOE3Y.iso" 

load_aoe3cc_ad()
{

    mkdir -p "$W_TMP/$W_PACKAGE"

    if ! test -f "$W_PROGRAMS_X86_UNIX/Microsoft Games/Age of Empires III/age3.exe"
    then
        load_aoe3cc
    fi

    # This app is protected by SmartE, so we have to copy
    # all the files to hard disk before installing.
    if ! test -f "$W_TMP/$W_PACKAGE/aoe3y/Setup.exe"
    then
        mkdir -p "$W_TMP/$W_PACKAGE/aoe3y"
        iso_mount "$W_CACHE/$W_PACKAGE/AOE3Y.iso"
        cp -rf "$W_ISO_MOUNT_ROOT"/* "$W_TMP"/$W_PACKAGE/aoe3y
        chmod -R +w "$W_TMP"/$W_PACKAGE/aoe3y
        iso_umount
    fi

    if w_workaround_wine_bug 657
    then
        w_try_winetricks mfc42
    fi

    if w_workaround_wine_bug 24897
    then
        w_try_winetricks msxml4
    fi

    AOE3Y_KEY="`cat "$W_CACHE/$W_PACKAGE/AOE3Y.txt" | tr -d -`"

    cd "$W_TMP"/$W_PACKAGE/aoe3y
    w_ahk_do "
        Run, Setup.exe
        SetTitleMatchMode, 2
        WinWait, Age of Empires III - The Asian Dynasties - InstallShield Wizard, Welcome
        Sleep 500
        ControlClick, Button1 ; Install
        WinWait, Age of Empires III - The Asian Dynasties, Product
        Sleep 500
        ControlClick, Edit1
        Send {RAW}$AOE3Y_KEY
        ControlClick Button1 ; OK
        WinWait, Age of Empires III - The Asian Dynasties ,finished
        Sleep 500
        ControlClick, Button1 ; Finish
        WinWaitClose
    "

    if w_workaround_wine_bug 24911
    then
        w_try_winetricks devenum dmsynth quartz l3codecx
    fi

    if w_workaround_wine_bug 24912
    then
        # kill off lingering installer
        w_ahk_do "
            SetTitleMatchMode, 2
            WinKill,Empires
        "
    fi

    w_declare_exe "$W_PROGRAMS_X86_WIN\\Microsoft Games\\Age of Empires III" "age3y.exe"
}

