w_metadata sonicdxb_demo games \
    title="Sonic Adventure Deluxe Trial B" \
    publisher="Sega" \
    year="2003" \
    media="download" \
    file1="sadx_trial_b.exe" 

load_sonicdxb_demo()
{
    # http://sega.jp/pc/sonicdx/
    # http://sega.jp/pc/sonicdx/trial.shtml
    if ! test -f "$W_CACHE/$W_PACKAGE/sadx_trial_b.exe"
    then
        w_download $W_PACKAGE 'http://sega.jp/cgi-bin/link.cgi?url=sadx_trial_b' f76fc33d3cb1b062437e03ba4e0687be07d903ad
        mv "$W_CACHE"/$W_PACKAGE/'link.cgi?url=sadx_trial_b' "$W_CACHE/$W_PACKAGE/sadx_trial_b.exe"
    fi

    # Switch to Japanese locale so freedesktop.org menu item works
    # (This works for Scott, at least)
    OLDLANG=${LANG}
    export LANG=ja_JP.utf8

    cd "$W_CACHE/$W_PACKAGE"
    w_ahk_do "
        run, sadx_trial_b.exe
        WinWait ahk_class SONIC_DX_PC_LC_B
        ControlClick, x450 y90
        WinWait ahk_class #32770
        ControlClick, Button3
        ControlClick, Button1
        WinWait ahk_class #32770
        ControlClick, Button1
        WinWait ahk_class #32770
        ControlClick, Button1
        WinWaitActive ahk_class SONIC_DX_PC_LC_G_B
        ControlClick, x450 y130
    "
    LANG=${OLDLANG}

    w_declare_exe "$W_PROGRAMS_X86_WIN\\Sega\\SONICADVENTUREDX_DEMO_B" "sonic.exe"
}

