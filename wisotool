load_imvu()
{

    w_download $W_PACKAGE http://static-akm.imvu.com/imvufiles/installers/InstallIMVU_449.0.exe c537341c5f31015ad4a848681f403fd77643e7d0

    cd "$W_CACHE/$W_PACKAGE"

    w_ahk_do "
