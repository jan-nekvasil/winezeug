#----------------------------------------------------------------


w_metadata fifaonline3_beta games \
    title="FIFA Online 3 Beta" \
    publisher="EA Sports" \
    year="2010" \
    media="download" \
    file1="FIFAOnlineSetup.exe" 

load_fifaonline3_beta()
{
    w_download_manual $W_PACKAGE http://fifa-online.easports.com/web/beta/welcome FIFAOnlineSetup.exe

    cd "$W_CACHE/$W_PACKAGE"
    w_ahk_do "
        SetTitleMatchMode, 2
        run, FIFAOnlineSetup.exe
        winwait, C++, License
        controlclick, Yes
        winwait, FIFA, Testing Agreement
        controlclick, Button1
        controlclick, Button3
        winwait, FIFA, Punk
        controlclick, Button1
        controlclick, Button3
        winwait, FIFA, Destination
        controlclick, Button1
        winwait, Setup, Please wait
        sleep 1000
        winwaitclose, Setup, Please wait
        sleep 10000
        send {Right}
        sleep 1000
        send {Space}
        sleep 1000
        send {Right}
        sleep 1000
        send {Space}
    "
    # Wait for download to finish and game to start
    while [ `ps a | grep NFE.exe | grep -v grep | wc -l` != "1" ]
    do
        sleep 5
    done

    # Dont kill game immediately
    sleep 10
    killall "NFE.exe"

    w_declare_exe "$W_PROGRAMS_X86_WIN\\EA Sports\\FIFA Online" "Launch.exe"

    # Download audio commentary
    cd "$W_DRIVE_C"
    w_ahk_do "
        SetTitleMatchMode, 2
        run, cmd /c run-$W_PACKAGE.bat
        winwait, EA SPORTS, Download Commentary
        controlclick, Button1, EA SPORTS, Download Commentary
        "

    # Wait for download to finish again and game to start
    while [ `ps a | grep NFE.exe | grep -v grep | wc -l` != "1" ]
    do
        sleep 5
    done

    # Dont kill game immediately
    sleep 10
    killall "NFE.exe"
}

