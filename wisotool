        WinClose
    "
    if w_workaround_wine_bug 23892
    then
        w_ahk_do "
            winwait Adventure Game Studio
            send {Enter}
        "
    fi

    w_declare_exe "$W_PROGRAMS_X86_WIN\\AGD Interactive\\King's Quest I" "Kq1vga.exe"
