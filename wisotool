w_metadata avatar_demo games \
    title="James Camerons Avatar The Game Demo" \
    publisher="Ubisoft" \
    year="2009" \
    media="download" \
    file1="Avatar_The_Game_Demo.exe" 

load_avatar_demo()
{
    w_download $W_PACKAGE http://gamedaily.newaol.com/pub/Avatar_The_Game_Demo.exe 8d8e4c82312962706bd2620406d592db4f0fa9c1

    if w_workaround_wine_bug 23094
    then
        w_try_winetricks vcrun2005
    fi

    mkdir -p "$W_TMP/$W_PACKAGE"
    cd "$W_TMP/$W_PACKAGE"
    try_unrar x "$W_CACHE/$W_PACKAGE/Avatar_The_Game_Demo.exe"
    w_ahk_do "
        SetTitleMatchMode, 2
        run, setup.exe
        winwait, Language
        controlclick, Button1
        winwait, AVATAR, Welcome
        controlclick, Button1
        winwait, AVATAR, License
        controlclick, Button5
        controlclick, Button2
        winwait, AVATAR, setup type
        controlclick, Button2
        ; Strange CRC error workaround. Will check this out. Stay tuned.
        loop
        {
            ifwinexist, CRC Error
            {
                winactivate, CRC Error
                controlclick, Button3, CRC Error ; ignore
            }
            ifwinexist, AVATAR, Complete
            {
                controlclick, Button4
                break
            }
            sleep 1000
        }
    "
    w_declare_exe "$W_PROGRAMS_X86_WIN\\Ubisoft\\Demo\\James Cameron's AVATAR - THE GAME (Demo)\\bin" "AvatarDemo.exe"
}

#----------------------------------------------------------------

# http://appdb.winehq.org/objectManager.php?sClass=version&iId=408
w_metadata baldursgate2 games \
    title="Baldurs Gate 2 - Shadows of Amn" \
    publisher="Bioware" \
    year="2000" \
    media="dvd" \
    file1="cc9359dce1a7be6c64bb6f8e6dea6d14d4a5f716.iso" \
    file2="429872605dad10433c3c581a1c11eba4d0988c46.iso" \
    file3="a6d18fcd7d16ddafbda7aa028b117566b1e09d2a.iso" \
    file4="94ed41768949c89a1a6479305f00a9cee1d2dcd5.iso" 

load_baldursgate2()
{
    # Possible wine bug: cd is still in use, even if wine eject is used. Workaround it by
    # copying all the cd's to a directory, and running the installer from there.
    # You still need the first CD mounted at the end, however...
    if test ! -d "$W_TMP"/$W_PACKAGE/tempcd
    then
        w_try mkdir -p "$W_TMP"/$W_PACKAGE/tempcd
        iso_mount "$W_CACHE"/$W_PACKAGE/cc9359dce1a7be6c64bb6f8e6dea6d14d4a5f716.iso
        sleep 5
        w_try cp -r "$W_ISO_MOUNT_ROOT"/* "$W_TMP"/$W_PACKAGE/tempcd
        iso_mount "$W_CACHE"/$W_PACKAGE/429872605dad10433c3c581a1c11eba4d0988c46.iso
        sleep 5
        w_try cp -r "$W_ISO_MOUNT_ROOT"/* "$W_TMP"/$W_PACKAGE/tempcd
        iso_mount "$W_CACHE"/$W_PACKAGE/a6d18fcd7d16ddafbda7aa028b117566b1e09d2a.iso
        sleep 5
        w_try cp -r "$W_ISO_MOUNT_ROOT"/* "$W_TMP"/$W_PACKAGE/tempcd
        iso_mount "$W_CACHE"/$W_PACKAGE/94ed41768949c89a1a6479305f00a9cee1d2dcd5.iso
        sleep 5
        w_try cp -r "$W_ISO_MOUNT_ROOT"/* "$W_TMP"/$W_PACKAGE/tempcd
    fi

    # Will perform a full install, so no cd's needed
    iso_mount "$W_CACHE"/$W_PACKAGE/cc9359dce1a7be6c64bb6f8e6dea6d14d4a5f716.iso

    w_ahk_do "
        SetTitleMatchMode, 2
        run "$W_TMP"/$W_PACKAGE/tempcd/setup.exe
        winwait, Baldur's Gate, Welcome to the Baldur's Gate
        sleep 1000
        ControlClick, Button1, Baldur's Gate, Welcome to the Baldur's Gate
        winwait, Baldur's Gate, Please read the following License Agreement
        sleep 1000
        ControlClick, Button2, Baldur's Gate, Please read the following License Agreement
        winwait, Baldur's Gate, Setup will install Baldur's Gate
        sleep 1000
        ControlClick, Button1, Baldur's Gate, Setup will install Baldur's Gate
        winwait, Baldur's Gate, Click the type of Setup you prefer
        sleep 1000
        ControlClick, Listbox1, Baldur's Gate, Click the type of Setup you prefer
        send {F}
        ControlClick, Button2, Baldur's Gate, Click the type of Setup you prefer
        winwait, Baldur's Gate, Setup will add program icons
        sleep 1000
        ControlClick, Button2, Baldur's Gate, Setup will add program icons
        winwait, Setup Needs The Next Disk
        sleep 1000
        Send {Home}
        Send {Shift down}
        Send {End}
        Send I:{Enter}
        winwait, Information
        sleep 1000
        ControlClick, Button1, Information
        Sleep 5000
        process, wait, Promo.exe, 5
        promopid = %ErrorLevel%
        winclose, ahk_pid %promopid%
        winwait, Baldur's Gate, Setup has finished installing
        sleep 1000
        ControlClick, Button4, Baldur's Gate, Setup has finished installing
        "
    w_try chmod +w -R "$W_TMP"/$W_PACKAGE/tempcd
    w_try rm -rf "$W_TMP"/$W_PACKAGE/tempcd

    # Install latest patch
    w_download $W_PACKAGE http://downloads.bioware.com/baldursgate2/Baldur%27sGateII-ShadowsofAmnPatchENGLISH.exe 4706c0dc1e282bae14946c87a38e2781f89ebdc4
    # AHK doesn't like its name...
    w_try cp -f "$W_CACHE/$W_PACKAGE/Baldur%27sGateII-ShadowsofAmnPatchENGLISH.exe" "$W_TMP/baldurs_gate_2_patch.exe"

    cd "$W_TMP"
    w_ahk_do "
        SetTitleMatchMode, 2
        run, baldurs_gate_2_patch.exe
        winwait InstallShield Wizard, Welcome to the InstallShield Wizard
        sleep 1000
        ControlClick Button1, InstallShield Wizard, Welcome to the InstallShield Wizard
        winwait InstallShield Wizard, InstallShield Wizard Complete
        sleep 1000
        ControlClick Button4, InstallShield Wizard, InstallShield Wizard Complete
        exit"
    cd -
    w_try rm "$W_TMP/baldurs_gate_2_patch.exe"

    if w_workaround_wine_bug 22482
    then
        w_try_winetricks ddr=opengl
        w_warn "Enabling 3d acceleration in BGConfig.exe will improve performance."
    fi

    if w_workaround_wine_bug 22493
    then
        w_warn "Enabling 3d acceleration in BGConfig.exe will improve performance."
    fi

    if test ! "$WINE" = ""
    then
        w_warn "Until wine bug 22511 is fixed, you should use a virtual desktop, or baldur's gate will only take up part of your screen in full screen mode."
    fi
}

#----------------------------------------------------------------

w_metadata batman_arkham_asylum_demo games \
    title="Batman: Arkham Asylum Demo" \
    publisher="Warner/Eidos/Enix" \
    year="2009" \
    media="download" \
    file1="BMDemo_installer.exe" 

load_batman_arkham_asylum_demo()
{
    w_download $W_PACKAGE http://cdn2.netops.eidosinteractive.com/batmanarkhamasylum/BMDemo_installer.exe 7582c87cc3983016c7fbf2104999df087ecce7a6

    cd "$W_CACHE/$W_PACKAGE"

    w_ahk_do "
        run BMDemo_installer.exe
        SetTitleMatchMode, 2
        WinWait, Batman: Arkham Asylum Demo, Select Language
        WinActivate
        Send {Enter}
        WinWait, Batman: Arkham Asylum Demo, Install Demo
        WinActivate
        Send {Tab}
        Send {Enter}
        WinWait, Batman: Arkham Asylum Demo, Welcome
        WinActivate
        Send {Enter}
        WinWait, Batman: Arkham Asylum Demo, License Agreement
        WinActivate
        Send +!a
        Send {Enter}
        Loop {
            Sleep (1000)
            IfWinExist, Batman: Arkham Asylum Demo, System Check Results
            {
                Sleep (300)
                WinActivate
                Send {Enter}
                break
            }
            IfWinExist, Batman: Arkham Asylum Demo, Your computer fails to meet
            {
                Sleep (300)
                Send +!o
            }
            IfWinExist, Batman: Arkham Asylum Demo, Setup has detected
            {
                Sleep (300)
                Send +!o ; I'm not sure about this keystroke sequence
            }
        }
        WinWait, Batman: Arkham Asylum Demo, Setup Type
        WinActivate
        Send {Enter}

        Loop
        {
            IfWinExist, NVIDIA, license
            {
                Sleep (500)
                WinActivate
                Send +!a ; license agreement
                Send +!n ; next
            }
            IfWinExist, NVIDIA, Finish  ; "NVIDIA PhysX has been successfully installed."
            {
                WinActivate
                Send +!f ; finish
            }
            IfWinExist, DXSETUP.exe - Error
            {
                Send {Enter}          ; DirectX9 Redistributable trying to install managed components, failing, but that's ok
            }
            IfWinExist, Fatal Error
            {
                Send {Enter}          ; PhysX installer exploded because wsh not installed, or dotnet30 not installed, probably ok
            }
            Process, Exist, BmLauncher.exe ; BmLauncher automatically starts after installation finished.
            retVal = %ErrorLevel%
            if retVal != 0
            {
                Process, Close, BmLauncher.exe ; kill BmLauncher
                break
            }
            ; If BmLauncher.exe fails to run, we'll get stuck in an infinite loop here.  Shouldn't happen unless, say, .net 30 fails to install.
            Sleep (2000)
        }
    "

    w_declare_exe "$W_PROGRAMS_X86_WIN\\Eidos\\Batman Arkham Asylum Demo\\Binaries" "ShippingPC-BmGame.exe"

    if w_workaround_wine_bug 6971
    then
        w_warn "The mouse is still broken in wine, but winetricks mwo=force will make the game much more playable, try it."
    fi
    if w_workaround_wine_bug 20651
    then
        w_download $W_PACKAGE http://www.glio.net/UserEngine.ini
        w_download $W_PACKAGE http://www.glio.net/UserInput.ini
        w_download $W_PACKAGE http://www.glio.net/UserGame.ini
        configdir="$W_DRIVE_C/users/$USERNAME/My Documents/Eidos/Batman Arkham Asylum Demo/BmGame/Config"
        mkdir -p "$configdir"
        cp "$W_CACHE/$W_PACKAGE"/*.ini "$configdir"
    fi
    if w_workaround_wine_bug 24471
    then
        w_try_winetricks mmdevapi=disabled
    fi
}

