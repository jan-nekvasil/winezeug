w_metadata ffvii_demo games \
    title="Final Fantasy VII" \
    publisher="Square Enix" \
    year="1998" \
    media="download" \
    file1="ff7demo.zip" 

load_ffvii_demo()
{
    w_download $W_PACKAGE "http://software-files-l.cnet.com/s/software/89/10/18/ff7demo.zip?e=1284462275&h=47913b28b2f4a0274af12447d1359776&lop=link&ptype=1901&ontid=7538&siteId=4&edId=3&spi=bc2f47421050036bcf32c99124aba9c2&pid=891018&psid=10020419&fileName=ff7demo.zip" 79a555cd1874410a93952486e511bb8492e82a56 ff7demo.zip

    mkdir "$W_PROGRAMS_X86_UNIX/ffvii_demo"
    cd "$W_PROGRAMS_X86_UNIX/ffvii_demo"
    w_try unzip "$W_CACHE/$W_PACKAGE/ff7demo.zip"

    if w_workaround_wine_bug 9220
    then
        w_warn "Doesn't work very well, see http://bugs.winehq.org/show_bug.cgi?id=9220"
    fi

    w_declare_exe "$W_PROGRAMS_X86_UNIX/ffvii_demo" "ff7demo.exe"
}


