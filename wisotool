#----------------------------------------------------------------

print_version() {
    echo "$VERSION"
}

#--------- Main program -----------------------------------------

olddir=`pwd`
srcdir=`dirname $0`
srcdir=`cd $srcdir; /bin/pwd`

# Load external verbs.  Filenames may not contain spaces.
if cd "$WISOTOOL_VERBS"
then
    for file in `find . -type f -name '*.verb' 2>/dev/null`
    do
       . $file
    done
fi
cd "$olddir"

verblist_finish

# On Solaris, choose more modern commands (needed for id -u).
case `uname -s` in
SunOS) PATH="/usr/xpg6/bin:/usr/xpg4/bin:$PATH"
      ;;
esac

case "$1" in
-V|--version)
    echo "wisotool version $VERSION.  (C) 2007-2010 Dan Kegel et al.  LGPL."
    exit 0
    ;;
esac

detect_menu
detect_sudo

GUI=0
case x"$1" in
x) GUI=1 ;;
x-h|x--help|xhelp) usage ; exit 1 ;;
esac

case "$OS" in
 "Windows_NT")
  ;;
 *)
  # Prevent running with wrong user id.
  # It's bad to create files as the wrong user!
  die_if_user_not_dirowner "$WINEPREFIX"
  # Wine misbehaves strangely if user doesn't own the parent of $WINEPREFIX.
  die_if_user_not_dirowner "$WINEPREFIX/.."

  if [ ! -x "`which "$WINE" 2>/dev/null`" ]
  then
      w_die "Cannot find wine ($WINE)"
  fi

  # Create wineprefix if not already there
  test -d "$WINEPREFIX" || WINEDLLOVERRIDES=mshtml= $WINE cmd /c echo yes > /dev/null 2>&1
  ;;
esac

mkdir -p "$W_TMP"

case $GUI in
1) showmenu ; set $todo ;;
esac

mkdir -p "$W_CACHE"

WINETRICKS="$srcdir/winetricks"
if ! test -f "$WINETRICKS"
then
    WINETRICKS="$W_CACHE/winetricks"
    w_download . http://kegel.com/wine/winetricks
fi

# The folder-name is localized!
W_PROGRAMS_WIN="`unset WINEDEBUG; WINEDLLOVERRIDES=mshtml= $WINE cmd.exe /c echo "%ProgramFiles%" | tr -d '\015'`"
test x"$W_PROGRAMS_WIN" != x || w_die "$WINE cmd.exe /c echo '%ProgramFiles%' returned empty string"
case "$W_PROGRAMS_WIN" in
%*) w_die "$WINE cmd.exe /c echo '%ProgramFiles%' returned unexpanded string... do you own the parent of $WINEPREFIX ?"
esac
W_PROGRAMS_UNIX="`unset WINEDEBUG; $XXXPATH -u "$W_PROGRAMS_WIN" | tr -d '\015' `"
test x"$W_PROGRAMS_UNIX" != x || w_die "winepath -u $W_PROGRAMS_WIN returned empty string"
wisotool_tmp_win="`$XXXPATH -w "$W_TMP"`"

# 64 bit windows has a second directory for program files
W_PROGRAMS_X86_WIN="${W_PROGRAMS_WIN} (x86)"
W_PROGRAMS_X86_UNIX="${W_PROGRAMS_UNIX} (x86)"
if ! test -d "$W_PROGRAMS_X86_UNIX"
then
    W_PROGRAMS_X86_WIN="${W_PROGRAMS_WIN}"
    W_PROGRAMS_X86_UNIX="${W_PROGRAMS_UNIX}"
fi
# FIXME: why export this?
export W_PROGRAMS_X86_UNIX

# FIXME: don't hardcode
programfilesdrive=c

# localized, and different across Windows versions:
appdata_win="`unset WINEDEBUG; WINEDLLOVERRIDES=mshtml= $WINE cmd.exe /c echo "%AppData%" | tr -d '\015'`"
appdata_unix="`unset WINEDEBUG; $XXXPATH -u "$appdata_win" | tr -d '\015' `"

# (Fixme: get fonts path from SHGetFolderPath
# See also http://blogs.msdn.com/oldnewthing/archive/2003/11/03/55532.aspx)
#
# Did the user rename Fonts to fonts?
if test ! -d "$W_WINDIR_UNIX"/Fonts && test -d "$W_WINDIR_UNIX"/fonts
then
    winefontsdir="$W_WINDIR_UNIX"/fonts
else
    winefontsdir="$W_WINDIR_UNIX"/Fonts
fi

# Mac folks tend to not have sha1sum, but we can make do with openssl
if [ -x "`which sha1sum 2>/dev/null`" ]
then
   SHA1SUM="sha1sum"
elif [ -x "`which openssl 2>/dev/null`" ]
then
   SHA1SUM="openssl dgst -sha1"
else
   w_die "No sha1sum utility available."
fi

if [ ! -x "`which unzip 2>/dev/null`" ]
then
    w_die "Cannot find unzip.  Please install it (e.g. 'sudo apt-get install unzip' or 'sudo yum install unzip')."
fi

while test "$1" != ""
do
    W_PACKAGE=$1
    # Kludge: shorthand synonyms.  Find some more elegant way of doing this.
    case $W_PACKAGE in
    dao) W_PACKAGE=dragonage ;;
    sc2) W_PACKAGE=starcraft2 ;;
    esac

    case $W_PACKAGE in
    -q) WISOTOOL_QUIET="/q"
        WINEDEBUG=${WINEDEBUG:-"fixme-all"}
        export WINEDEBUG
        ;;
    -v) set -x;;
    ls) list_available_verbs;;
    load) load_iso dd;;
    load_harder) load_iso ddrescue;;
    load=*) key="`echo $W_PACKAGE | sed 's/load=//'`"; load_iso dd "$key";;
    refile|migrate) migrate_files;;
    version) print_version;;

    *.verb)
       case $1 in
       */*) . $1 ;;
       *) . ./$1 ;;
       esac
       W_PACKAGE=`echo $1 | sed 's,.*/,,;s,.verb,,'`
       load_$W_PACKAGE
       ;;
    *) if verblist_is_legal_verb $W_PACKAGE
       then
           load_$W_PACKAGE
       else
           echo Unknown arg $W_PACKAGE; usage ; exit 1;
       fi
       ;;
    esac
    # Provide a bit of feedback
    test "$WISOTOOL_QUIET" = "" && case $W_PACKAGE in
    -q) echo Setting quiet mode;;
    -v) echo Setting verbose mode;;
    *) #echo "$W_PACKAGE done" ;;
    esac
    shift

    # if verbs doesn't preserve the working directory, restore it
    cd "$olddir"

    # User-specific postinstall hook.
    # Source it so the script can call download() if needed.
    if [ -f "$WISOTOOL_POST"/$W_PACKAGE/$W_PACKAGE-postinstall.sh ]
    then
        chmod +x "$WISOTOOL_POST/$W_PACKAGE/$W_PACKAGE-postinstall.sh"
        ( . "$WISOTOOL_POST"/$W_PACKAGE/$W_PACKAGE-postinstall.sh )
    fi
done

test "$WISOTOOL_CACHE_SYMLINK" && rm -f "$WISOTOOL_CACHE_SYMLINK"

# remove the temp directory
chmod -R 700 "$W_TMP"
while ! rm -rf "$W_TMP"
do
    # Sometimes apps take a while to exit on Vista
    sleep 1
done
