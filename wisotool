#----------------------------------------------------------------

w_metadata anno1404_demo games \
    title="Anno 1404 Demo" \
    publisher="Ubisoft" \
    year="2009" \
    media="download" \
    file1="DawnofDiscovery_Demo_US_2009_06_15_18_22.zip" 

load_anno1404_demo()
{
    w_download_manual $W_PACKAGE "http://www.filefront.com/thankyou.php?f=13908918" DawnofDiscovery_Demo_US_2009_06_15_18_22.zip

    mkdir -p "$W_TMP/$W_PACKAGE"
    cd "$W_TMP/$W_PACKAGE"
    w_try unzip "$W_CACHE/$W_PACKAGE"/DawnofDiscovery_Demo_US_2009_06_15_18_22.zip
    w_try cd "Anno1404_Demo_US_2009_06_15_18_22"
    w_ahk_do "
        run, setup.exe
        SetTitleMatchMode, 2
        winwait, , Welcome to the InstallShield Wizard for Dawn of Discovery (Demo)
        ControlClick, Button3 ; Next
        winwait, , Licence Agreement
        ControlClick, Button2 ; Accept
        ControlClick, Button6 ; Next
        winwait, , Setup Type
        ControlClick Button4  ; Next
        winwait, , Select Options
        ControlClick Button6  ; Next
        winwait, Question
        ControlClick Button2  ; No
        winwait, , InstallShield Wizard completed
        Controlclick Button4  ; Finish
    "

    if w_workaround_wine_bug 22762
    then
        if test -f "$W_DRIVE_C/users/$USERNAME/Application Data/Ubisoft/Anno1404Demo/Config/Engine.ini"
        then
            cd "$W_DRIVE_C/users/$USERNAME/Application Data/Ubisoft/Anno1404Demo/Config/"
            mv Engine.ini oldEngine.ini
            sed '/LanguageTAG/s,eng,usa,;
                 /DirectXVersion/s,0,9,' oldEngine.ini > Engine.ini
        else
            mkdir -p "$W_DRIVE_C/users/$USERNAME/Application Data/Ubisoft/Anno1404Demo/Config/"
            cat > "$W_DRIVE_C/users/$USERNAME/Application Data/Ubisoft/Anno1404Demo/Config/Engine.ini" <<__EOF__
<InitFile>
<DirectXVersion>9</DirectXVersion>
<LanguageTAG>usa</LanguageTAG>
</InitFile>
__EOF__
        fi
    fi

    w_declare_exe "$W_PROGRAMS_X86_WIN\\Ubisoft\\Related Designs\\Dawn of Discovery (Demo)" "Anno4.exe"
}

