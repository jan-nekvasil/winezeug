w_metadata ffxiv games \
    title="Final Fantasy XIV" \
    publisher="Square Enix" \
    year="2010" \
    media="dvd" \
    file1="3df40d83b227484a302d3f51615d1d90f419daf6.iso" 

load_ffxiv()
{

    iso_mount "$W_CACHE/$W_PACKAGE/3df40d83b227484a302d3f51615d1d90f419daf6.iso"

    w_read_key
    
    w_ahk_do "
    SetTitleMatchMode, 2
    run ${W_ISO_MOUNT_LETTER}:ffxivsetup.exe
    winwait, FINAL FANTASY XIV, Please select a language
    sleep 1000
    controlclick, Button2, FINAL FANTASY XIV, Please select a language
    ; It forces Directx Install :-(
    winwait, FINAL FANTASY XIV, A new version of DirectX is required for installation
    sleep 1000
    controlclick, Button2, FINAL FANTASY XIV, A new version of DirectX is required for installation
    winwait, Installing Microsoft(R) DirectX(R), Welcome to setup for DirectX
    sleep 1000
    controlclick, Button1, Installing Microsoft(R) DirectX(R), Welcome to setup for DirectX
    sleep 1000
    controlclick, Button4, Installing Microsoft(R) DirectX(R), Welcome to setup for DirectX
    winwait, Installing Microsoft(R) DirectX(R), This install package will search for updated DirectX
    sleep 1000
    Controlclick, Button4, Installing Microsoft(R) DirectX(R), This install package will search for updated DirectX
    winwait, Installing Microsoft(R) DirectX(R), Installation Complete
    sleep 1000
    controlclick, Button5, Installing Microsoft(R) DirectX(R), Installation Complete
    winwait, FINAL FANTASY XIV, The InstallShield Wizard will install FINAL FANTASY
    sleep 1000
    Controlclick, Button1, FINAL FANTASY XIV, The InstallShield Wizard will install FINAL FANTASY
    winwait, FINAL FANTASY XIV, Please shut down any antivirus
    sleep 1000
    ControlClick, Button1, FINAL FANTASY XIV, Please shut down any antivirus
    winwait, FINAL FANTASY XIV, License Agreement
    sleep 1000
    Controlclick, Button5, FINAL FANTASY XIV, License Agreement
    sleep 1000
    Controlclick, Button2, FINAL FANTASY XIV, License Agreement
    winwait, FINAL FANTASY XIV, To install to this folder
    sleep 1000
    controlclick, Button1, FINAL FANTASY XIV, To install to this folder
    winwait, FINAL FANTASY XIV, Start Copying Files
    sleep 1000
    controlclick, Button1, FINAL FANTASY XIV, Start Copying Files
    winwait, FINAL FANTASY XIV, InstallShield Wizard Complete
    sleep 1000
    Controlclick, Button1, FINAL FANTASY XIV, InstallShield Wizard Complete
    sleep 1000
    Controlclick, Button4, FINAL FANTASY XIV, InstallShield Wizard Complete
    "

    if w_workaround_wine_bug 24358
    then
        w_try_winetricks winhttp
        w_warn "You'll want to forward ports TCP/UDP 55296-55551 and UDP 443 to your computer to speed up the download. See also http://bugs.winehq.org/show_bug.cgi?id=24358"
    fi

    if w_workaround_wine_bug 24375
    then
        w_try_winetricks ie6
    fi

    w_declare_exe "$W_PROGRAMS_X86_WIN\\SquareEnix\\FINAL FANTASY XIV" "ffxivboot.exe"
}

#----------------------------------------------------------------

w_metadata ffxivbench benchmarks \
    title="Final Fantasy XIV Benchmark" \
    publisher="Square Enix" \
    year="2010" \
    media="download" \
    file1="FFXIVBenchmark.zip" 

load_ffxivbench()
{
    w_download $W_PACKAGE http://uk.download.nvidia.com/nzone/international/benchmarks/ffxiv/FFXIVBenchmark.zip 9c2406540306575bdc738c439e59f54eb44304a8

    cd "$W_PROGRAMS_X86_UNIX"
    w_try unzip "$W_CACHE/$W_PACKAGE/FFXIVBenchmark.zip"

# Setup two batch files, one for high res, one for low res:
cat > FFXIVBenchmark/data/config.low <<__EOF__
[FFXIV_BENCHMARK]
LANGUAGE=1
CHARACTER=0
RESOLUTION=1
LOOP=0
__EOF__

cat > FFXIVBenchmark/data/config.high <<__EOF__
[FFXIV_BENCHMARK]
LANGUAGE=1
CHARACTER=0
RESOLUTION=0
LOOP=0
__EOF__

cat > "$W_DRIVE_C/run-$W_PACKAGE-low.bat" <<__EOF__
${programfilesdrive}:
cd "$W_PROGRAMS_X86_WIN\\FFXIVBenchmark\\data"
copy config.low config.ini /y
FFXivWinBenchmark.exe
__EOF__

cat > "$W_DRIVE_C/run-$W_PACKAGE-high.bat" <<__EOF__
${programfilesdrive}:
cd "$W_PROGRAMS_X86_WIN\\FFXIVBenchmark\\data"
copy config.high config.ini /y
FFXivWinBenchmark.exe
__EOF__

if w_workaround_wine_bug 22555
then
        w_try_winetricks d3dx9_36
fi

}

