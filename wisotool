    w_ahk_do "
        SetTitleMatchMode, 2
        Run, ${W_ISO_MOUNT_LETTER}:Torchlight.exe
        WinWait, Torchlight Setup, This wizard will guide
        sleep 1000
        ControlClick, Button2, Torchlight Setup, This wizard will guide
